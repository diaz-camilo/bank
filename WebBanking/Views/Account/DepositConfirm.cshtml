@model TransactionViewModel
@{ ViewData["Title"] = "Deposit"; }

<h1>Account Number - @Model.AccountNumber</h1>

<h3>Review and Confirm Deposit</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="DepositConfirm">
            
            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label">Account Number</label>
                <label class="form-control">@Html.DisplayFor(x => x.AccountNumber)</label>
                <label asp-for="Amount" class="control-label"></label>
                <label class="form-control">@Html.DisplayFor(x => x.Amount)</label>                                
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-success" />
                <a asp-action="ClearTransactions" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Accounts</a>
</div>

