@model WebBanking.ViewModels.TransactionViewModel

@{ ViewData["Title"] = "Transfer"; }

<h1>Transfer</h1>
<h3>Review and Confirm Transfer</h3>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="TransferFormConfirm">
                        <div class="form-group">
                <label asp-for="AccountNumber" class="control-label"></label>
                <label class="form-control">@Model.AccountNumber</label>
                
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <label asp-for="Amount" class="form-control" >@Html.DisplayFor(x => x.Amount)</label>
                <span asp-validation-for="Amount" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <label class="form-control">@Model.Comment</label>
            </div>
            <div class="form-group">
                <label asp-for="DestinationAccountNumber" class="control-label"></label>
                <label class="form-control">@Model.DestinationAccountNumber</label>

            </div>
            <div class="form-group">
                <input type="submit" value="Confirm" class="btn btn-success" />
                <a asp-action="ClearTransactions" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

