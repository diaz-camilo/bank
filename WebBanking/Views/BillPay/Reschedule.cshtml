
@model BillPay

@{ ViewData["Title"] = "Reschedule BillPay"; }

<h1>Reschedule</h1>

<h4>BillPay</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Reschedule">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BillPayID" />
            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label"></label>
                <label asp-for="AccountNumber" class="form-control">@Html.DisplayFor(x => x.AccountNumber)</label>
            </div>
            <div class="form-group">
                <label asp-for="Payee" class="control-label"></label>
                <label asp-for="Payee" class="form-control">@Html.DisplayFor(x => x.PayeeID) - @Html.DisplayFor(x => x.Payee.Name)</label>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <label asp-for="Amount" class="form-control">@Html.DisplayFor(x => x.Amount)</label>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleTimeUtc" class="control-label"></label>
                <input asp-for="ScheduleTimeUtc" class="form-control" />
                <span asp-validation-for="ScheduleTimeUtc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Period" class="control-label"></label>
                <label asp-for="Period" class="form-control">@Html.DisplayFor(x => x.Period)</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="FailedBills">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
