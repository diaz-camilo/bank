@model BillPayStateViewModel;

@{
    ViewData["Title"] = "Customer Access";
}
<h1>@ViewData["Title"]</h1>
<hr>
<div class="container">
    <form asp-action="BillPayState">
        <div class="row">
            <div class="col form-group">
                <label asp-for="BillPayID" class="control-label"></label>
                <input asp-for="BillPayID" class="form-control" />
                <span asp-validation-for="BillPayID" class="text-danger"></span>
            </div>
            <div class="col form-group">
                <label asp-for="BillPayState" class="control-label"></label>
                <select asp-for="BillPayState" class="form-control" asp-items="Model.BillPayStates"></select>
            </div>
        </div>

        <div class="row form-group">
            <input type="submit" value="Update BillPay State" class="btn btn-primary form-control" />
        </div>
    </form>
</div>
<hr>

@if (Model.Response != null)
{
    <h3>@Model.Response</h3>
    <p>
        <b>BillPay ID:</b> @Model.BillPayID<br />
        <b>Request:</b> @{var r = Model.BillPayState == true ? "Block Bill" : "Unblock Bill";}
    </p>
}